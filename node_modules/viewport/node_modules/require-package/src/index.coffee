module.exports = class RequirePackage

    #
    # mount a connect based application
    #

    @mount: (conf = {}) -> 

        unless conf.app and typeof conf.app.use == 'function'

            throw 'requires conf.app as connect based app instance'

        unless conf.name

            throw 'requires conf.name as package name'

        unless conf.src

            throw 'requires conf.src as path to package scripts'

        console.log 'mount()', 
            package: conf.name
            src: conf.src
