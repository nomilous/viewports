ViewportProxy  = require './viewport_proxy'
path           = require 'path'
RequirePackage = require 'require-package'
requirePackage = new RequirePackage


module.exports = 

    mount: (conf) -> 

        conf.name = 'viewport'
        conf.src = path.join __dirname, '../lib'
        conf.scripts = [
            'main.js',
            'viewport.js',
            'uplink.js',
            'controls.js',
            'view.js',
            'input/keyboard.js',
            'input/mouse.js'
        ]
        requirePackage.mount conf


    protocol: (new ViewportProxy).protocol
