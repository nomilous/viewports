if typeof define isnt 'function'
    define = require('amdefine')(module)

define -> 

    service = 

        init: (config) ->

            name   = config.name
            type   = config.type
            socket = config.socket

            #
            # TODO: the following, according to type, later
            #   

            socket.on 'connect', ->

                socket.emit 'viewport:connect' 

                    name: name

            socket.on 'viewport:connect:ok', (data) -> 

                console.log 'viewport:connect:ok', data

